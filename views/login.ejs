<body>
	<div id="app" class="container">

		<form action="/home" method="post" class="form-signin">
			<h4 class="form-signin-heading">Choose a Username</h4>
			<div class="form-group">
				<label for="username" class="sr-only">Username</label>
		    <input id="username" class="form-control" type="text" placeholder="username" name="username" required autofocus v-model="username">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block" type="submit">Sign In</button>
			</div>
		</form>

	</div>
</body>


